<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.thiagomelo.teste.escolhatime">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_text"
        android:text="Escolha um time"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tela_time"
        android:layout_alignEnd="@+id/tela_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/textView"
        android:layout_below="@+id/edt_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:textSize="20dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tela_time">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal|top" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:id="@+id/imageView"
            android:layout_gravity="left|top"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal|top"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:id="@+id/imageView4"
            android:layout_gravity="right|top"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:id="@+id/imageView5"
            android:layout_gravity="left|center_vertical"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:id="@+id/imageView6"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:id="@+id/imageView7"
            android:layout_gravity="right|center_vertical"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:id="@+id/imageView8"
            android:layout_gravity="left|bottom"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:id="@+id/imageView9"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:id="@+id/imageView10"
            android:layout_gravity="right|bottom"
            android:background="@mipmap/ic_launcher" />
    </FrameLayout>
</RelativeLayout>
